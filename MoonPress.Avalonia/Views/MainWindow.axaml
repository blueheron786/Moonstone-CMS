<Window xmlns="https://github.com/avaloniaui"
        xmlns:views="clr-namespace:MoonPress.Avalonia.Views.Project"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MoonPress.Avalonia.ViewModels"
        xmlns:vmp="using:MoonPress.Avalonia.ViewModels.Project"
        x:DataType="vm:MainWindowViewModel"
        x:Class="MoonPress.Avalonia.Views.MainWindow">
    <DockPanel>
        <!-- Navigation menu -->
        <StackPanel DockPanel.Dock="Left" Margin="16">
            <Label Content="Main Menu" />
            <Button Command="{Binding NewProjectCommand}" Content="New Project" />
            <Button Command="{Binding LoadProjectCommand}" Content="Load Project" />
        </StackPanel>

         <!-- Dynamic content area (like Blazor's @Body)  -->
        <ContentControl Content="{Binding CurrentView}">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="vmp:LoadProjectViewModel">
                    <views:LoadProjectView />
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>
    </DockPanel>
</Window>