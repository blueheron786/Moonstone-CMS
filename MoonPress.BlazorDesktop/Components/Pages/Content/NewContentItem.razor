@page "/content-item/new"

<h3>New Page</h3>

<EditForm Model="_item" OnValidSubmit="Save">
    <div class="mb-3">
        <label>Title</label>
        <InputText class="form-control" @bind-Value="_item.Title" />
    </div>
    <div class="mb-3">
        <label>Contents</label>
        <InputTextArea class="form-control" @bind-Value="_item.Contents" rows="10" />
    </div>
    <button class="btn btn-success" type="submit">Save</button>
    <button class="btn btn-secondary" type="button" @onclick="Cancel">Cancel</button>
</EditForm>
